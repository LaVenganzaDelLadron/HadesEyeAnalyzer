<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B0F12"
    android:padding="16dp"
    tools:context=".fragments.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <HorizontalScrollView
            android:id="@+id/statsHorizontalScroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="always"
            android:scrollbars="none"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="110dp"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="#1A1F26"
                    app:cardElevation="3dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp">

                        <!-- Top-left label -->
                        <TextView
                            android:id="@+id/tvScansLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SCANS"
                            android:textColor="#1DB954"
                            android:textSize="12sp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true" />

                        <!-- Big number, aligned bottom-left -->
                        <TextView
                            android:id="@+id/tvScansCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1247"
                            android:textColor="#FFFFFF"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


                <!-- Stat Card: Threats -->
                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="110dp"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="#1A1F26"
                    app:cardElevation="3dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp">

                        <!-- Top-left label -->
                        <TextView
                            android:id="@+id/tvThreatLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="THREAT"
                            android:textColor="#FF0000"
                            android:textSize="12sp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true" />

                        <!-- Big number, aligned bottom-left -->
                        <TextView
                            android:id="@+id/tvThreatCounts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1247"
                            android:textColor="#FFFFFF"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


                <!-- Stat Card: Malicious -->
                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="110dp"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="#1A1F26"
                    app:cardElevation="3dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp">

                        <!-- Top-left label -->
                        <TextView
                            android:id="@+id/tvMaliciousLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="THREAT"
                            android:textColor="#FFD93D"
                            android:textSize="12sp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true" />

                        <!-- Big number, aligned bottom-left -->
                        <TextView
                            android:id="@+id/tvMaliciousCounts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1247"
                            android:textColor="#FFFFFF"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </HorizontalScrollView>

        <!-- Quick Actions -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="#1A1F26"
            app:cardCornerRadius="12dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="QUICK ACTIONS"
                    android:layout_gravity="left"
                    android:textColor="#1DB954"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnStartScan"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/green_button"
                        android:gravity="center"
                        android:drawableLeft="@drawable/skull_scan"
                        android:drawablePadding="8dp"
                        android:padding="12dp"
                        android:text="START SCAN"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="14sp" />


                    <Button
                        android:id="@+id/btnViewReports"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/green_button"
                        android:gravity="center"
                        android:drawableLeft="@drawable/skull_scan"
                        android:drawablePadding="8dp"
                        android:padding="12dp"
                        android:text="VIEW REPORTS"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Recent Activity -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="#1A1F26"
            app:cardCornerRadius="12dp"
            android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RECENT ACTIVITY"
                android:textColor="#1DB954"
                android:textSize="16sp"
                android:textStyle="normal"
                android:layout_marginBottom="12dp" />

            <!-- First Item -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="6dp">

                <View
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/green_circle"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Script.py"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#333333"/>

            <!-- Second Item -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="6dp">

                <View
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/red_circle"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="https://www.iahsduyghdifkjnmaljdsad.flare"
                    android:textColor="#AAAAAA"
                    android:textSize="14sp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#333333"/>

            <!-- Third Item -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="6dp">

                <View
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/yellow_circle"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="clickme.exe"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- Breach Data -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="#1A1F26"
            app:cardCornerRadius="12dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Who's been pwned"
                    android:textColor="#1DB954"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Breach Name                                               Pwned Counts"
                    android:textColor="#AAAAAA"
                    android:padding="4dp" />

                <!-- First Item -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="6dp">

                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giglio                                                                 950.5k"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="6dp">

                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Github                                                                 200.5k"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="6dp">

                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Google                                                                 1.5M"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Security Tips -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            app:cardBackgroundColor="#1A1F26"
            app:cardCornerRadius="12dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SECURITY TIPS"
                    android:textColor="#1DB954"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Avoid clicking suspicious links"
                    android:textColor="#AAAAAA"
                    android:padding="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Use strong passwords"
                    android:textColor="#AAAAAA"
                    android:padding="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Don’t install trojans"
                    android:textColor="#AAAAAA"
                    android:padding="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Malware is more dangerous than you think"
                    android:textColor="#AAAAAA"
                    android:padding="2dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
