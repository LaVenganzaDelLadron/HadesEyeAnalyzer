<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B0F12"
    android:padding="16dp"
    tools:context=".fragments.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <HorizontalScrollView
            android:id="@+id/statsHorizontalScroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="always"
            android:scrollbars="none"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Stat Card: Scans -->
                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="110dp"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="#1A1F26"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tvScansCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1247"
                            android:textColor="#FFFFFF"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvScansLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SCANS"
                            android:textColor="#57FF6D"
                            android:textSize="12sp"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Stat Card: Threats -->
                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="110dp"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="#1A1F26"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tvThreatCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="80"
                            android:textColor="#FFFFFF"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvThreatLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="THREATS"
                            android:textColor="#FF6B6B"
                            android:textSize="12sp"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Stat Card: Malicious -->
                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="110dp"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="#1A1F26"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tvMaliciousCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="120"
                            android:textColor="#FFFFFF"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvMaliciousLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MALICIOUS"
                            android:textColor="#FFD93B"
                            android:textSize="12sp"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Example extra stat (optional) -->
                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="110dp"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="#1A1F26"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tvExtraCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="—"
                            android:textColor="#FFFFFF"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvExtraLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MORE"
                            android:textColor="#AAAAAA"
                            android:textSize="12sp"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </HorizontalScrollView>

        <!-- Quick Actions -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="#1A1F26"
            app:cardCornerRadius="12dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QUICK ACTIONS"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnStartScan"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:text="START SCAN"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#2C313C"
                        android:layout_margin="8dp" />

                    <Button
                        android:id="@+id/btnViewReports"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:text="VIEW REPORTS"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#2C313C"
                        android:layout_margin="8dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Recent Activity -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="#1A1F26"
            app:cardCornerRadius="12dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RECENT ACTIVITY"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Script.py"
                    android:textColor="#AAAAAA"
                    android:padding="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="https://www.iahsduyghdifkjnmaljdsad.flare"
                    android:textColor="#AAAAAA"
                    android:padding="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="clickme.exe"
                    android:textColor="#AAAAAA"
                    android:padding="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Breach Data -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="#1A1F26"
            app:cardCornerRadius="12dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BREACH DATA"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Who’s been pwned"
                    android:textColor="#AAAAAA"
                    android:padding="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="950.5k • Giglio"
                    android:textColor="#AAAAAA"
                    android:padding="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1M • Github"
                    android:textColor="#AAAAAA"
                    android:padding="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3M • PiHole"
                    android:textColor="#AAAAAA"
                    android:padding="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Security Tips -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            app:cardBackgroundColor="#1A1F26"
            app:cardCornerRadius="12dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SECURITY TIPS"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Avoid clicking suspicious links"
                    android:textColor="#AAAAAA"
                    android:padding="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Use strong passwords"
                    android:textColor="#AAAAAA"
                    android:padding="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Don’t install trojans"
                    android:textColor="#AAAAAA"
                    android:padding="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Malware is more dangerous than you think"
                    android:textColor="#AAAAAA"
                    android:padding="2dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
