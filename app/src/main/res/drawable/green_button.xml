<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#189D43"> <!-- Green ripple color -->

    <item>
        <selector>
            <!-- Pressed state -->
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <solid android:color="#18A74C"/> <!-- Darker green -->
                    <corners android:radius="12dp"/>
                    <stroke android:width="2dp" android:color="#FFFFFF"/> <!-- White outline -->
                </shape>
            </item>

            <!-- Default state -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#1DB954"/> <!-- Default green -->
                    <corners android:radius="12dp"/>
                    <stroke android:width="2dp" android:color="#FFFFFF"/> <!-- White outline -->
                </shape>
            </item>
        </selector>
    </item>
</ripple>
